<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/activity_home">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:fitsSystemWindows="true"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="1dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/banner" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="100dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:text="Akses kamu"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/m1"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:layout_width="0dp"
                                        android:layout_height="90dp"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="10dp"
                                        app:cardUseCompatPadding="true"
                                        app:contentPadding="2dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:src="@drawable/md1"
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:layout_gravity="center" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="5dp"
                                                android:gravity="center"
                                                android:text="KELASKU"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="12sp" />


                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>


                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/m2"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:layout_width="0dp"
                                        android:layout_height="90dp"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="10dp"
                                        app:cardUseCompatPadding="true"
                                        app:contentPadding="2dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/md2"
                                                android:layout_gravity="center" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="5dp"
                                                android:gravity="center"
                                                android:text="TRANSAKSI"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/m3"
                                        android:visibility="gone"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:layout_width="0dp"
                                        android:layout_height="90dp"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="10dp"
                                        app:cardUseCompatPadding="true"
                                        app:contentPadding="2dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/md3"/>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="5dp"
                                                android:gravity="center"
                                                android:text="BERKASKU"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="12sp" />


                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/m4"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:layout_width="0dp"
                                        android:layout_height="90dp"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="10dp"
                                        app:cardUseCompatPadding="true"
                                        app:contentPadding="2dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/md4"/>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="5dp"
                                                android:gravity="center"
                                                android:text="PRODUK"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="12sp" />


                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/m5"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:layout_width="0dp"
                                        android:layout_height="90dp"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="10dp"
                                        app:cardUseCompatPadding="true"
                                        app:contentPadding="2dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/md5"
                                                android:layout_gravity="center" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="5dp"
                                                android:gravity="center"
                                                android:text="KANTOR"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/m6"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:layout_width="0dp"
                                        android:layout_height="90dp"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="10dp"
                                        app:cardUseCompatPadding="true"
                                        app:contentPadding="2dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/md6"
                                                android:layout_gravity="center" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="5dp"
                                                android:gravity="center"
                                                android:text="PROFIL"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="12sp" />


                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="2dp"
                                android:text="Kelas terpopuler"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text="Temukan kelas pegawai untukmu!"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/lihatkelas"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|end"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/buttoneffect2"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="LIHAT SEMUA"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/colorAbu" />

                            <!--kelas-->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_kelas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:text="Berita terkini"
                        android:textSize="16sp" />
                    <!--berita-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_berita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/detail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center|end"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/buttoneffect2"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="LIHAT SEMUA"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>